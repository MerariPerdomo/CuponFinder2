<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center|start|top"
    android:padding="15dp"
    tools:context=".Editar_promocion">

    <Button
        android:id="@+id/btnRegresarEditarPromocion"
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="209dp"
        android:layout_height="55dp"
        android:layout_marginBottom="32dp"
        app:icon="@drawable/ic_regresar"
        android:text="@string/edit_promotion"
        android:textColor="@color/light_blue_600"
        android:textSize="20sp"
        tools:ignore="MissingConstraints,VisualLintOverlap"
        android:onClick="Regresar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-19dp"
        tools:layout_editor_absoluteY="-329dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:contentDescription="@string/publicidad_ex"
                android:maxHeight="400dp"
                tools:ignore="MissingConstraints" />
